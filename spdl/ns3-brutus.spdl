/* to be nice to brutus, stupid scenario :( */

run ns3brutus.R(Agent,Bob);
  run ns3brutus.I(Alice,Agent);
run ns3brutus.R(Agent,Bob);
  run ns3brutus.I(Alice,Agent);
run ns3brutus.R(Agent,Bob);
  run ns3brutus.I(Alice,Agent);
run ns3brutus.R(Agent,Bob);
